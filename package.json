{
  "name": "meechlocs-monorepo",
  "private": true,
  "scripts": {
    "db:up": "docker compose up -d",
    "seed": "node ./prisma/seed.js",
    "dev:api": "npm --prefix ./apps/api run dev",
    "dev:web": "npm --prefix ./apps/web run dev",
    "dev:all": "bash ./scripts/run-dev.sh --detach",
    "predeploy:check": "bash ./scripts/predeploy-check.sh",
    "simulate": "bash ./scripts/simulate-checkout.sh"
  },
  "devDependencies": {
    "prisma": "^5.22.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1"
  }
}
