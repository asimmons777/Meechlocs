generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  passwordHash     String
  name             String?
  phone            String?
  verifiedAt       DateTime?
  role             Role      @default(USER)
  isGuest          Boolean   @default(false)
  stripeCustomerId String?
  createdAt        DateTime  @default(now())
  appointments     Appointment[]
  passwordResetTokens PasswordResetToken[]
}

model RegistrationCode {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  phone        String?
  name         String?
  passwordHash String
  codeHash     String
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model Service {
  id           Int       @id @default(autoincrement())
  title        String
  description  String?
  durationMins Int
  priceCents   Int
  depositCents Int
  images       Json?
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  appointments Appointment[]
}

model Availability {
  id        Int      @id @default(autoincrement())
  start     DateTime
  end       DateTime
  createdAt DateTime @default(now())
}

model Appointment {
  id                  Int               @id @default(autoincrement())
  user                User?             @relation(fields: [userId], references: [id])
  userId              Int?
  service             Service?          @relation(fields: [serviceId], references: [id])
  serviceId           Int?
  start               DateTime
  end                 DateTime
  status              AppointmentStatus @default(PENDING)
  stripePaymentIntent String?
  stripeSessionId     String?
  createdAt           DateTime          @default(now())
}

enum Role {
  USER
  ADMIN
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELED
  REFUNDED
}
